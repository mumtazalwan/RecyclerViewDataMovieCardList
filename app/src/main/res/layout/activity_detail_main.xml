<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMainActivity">

    <ImageView
        android:id="@+id/img_detail"
        android:layout_width="330px"
        android:layout_height="488px"
        android:scaleType="centerCrop"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/img_detail"
        android:text="Title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_rating"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tv_title"
        android:text="8.6"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_genre"
        android:text="Genre: Action"
        android:layout_toRightOf="@+id/tv_separator"
        android:layout_below="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_release"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_detail"
        android:text="Release Date"
        android:layout_below="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_separator"
        android:text="|"
        android:layout_toRightOf="@id/tv_release"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_release"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_detail"
        android:text="Director Name" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_detail"
        android:text="Movie Description"
        android:layout_below="@id/tv_director"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>